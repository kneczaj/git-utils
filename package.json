{
  "name": "template-base",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "yarn vite-node src/index.ts",
    "test:base": "vitest",
    "test": "yarn test:base watch",
    "test:once": "yarn test:base run",
    "test:coverage": "yarn test:once --coverage",
    "test:coverage:pr": "git fetch && yarn test:coverage --changed=${REMOTE}/${MASTER_BRANCH}",
    "lint": "biome check",
    "fix": "yarn lint --write",
    "typecheck": "tsc --noEmit",
    "typecheck:watch": "yarn typecheck --watch"
  },
  "author": "Kamil Neczaj",
  "license": "LicenseRef-LICENSE",
  "devDependencies": {
    "@biomejs/biome": "^2.0.6",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^24.2.0",
    "@vitest/coverage-v8": "^3.2.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*": [
      "biome check --write --no-errors-on-unmatched --files-ignore-unknown=true"
    ]
  }
}
