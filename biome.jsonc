{
  "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on",
        "useSortedAttributes": "on",
        "useSortedKeys": "on"
      }
    }
  },
  "files": {
    "ignoreUnknown": false,
    "includes": ["**", "!data/**", "!coverage/**"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "complexity": {
        // forEach looks more readable than `for` loop, and better matches functional programming
        "noForEach": "off",
        // class with only static elements is a nice way to group a set of function in an organism if they closely cooperate with each other
        "noStaticOnlyClass": "off"
      },
      "correctness": {
        "noUnusedFunctionParameters": {
          "fix": "none",
          "level": "error"
        },
        "noUnusedVariables": {
          "fix": "none",
          "level": "error",
          "options": {
            // otherwise using rest operator is quite inconvenient
            "ignoreRestSiblings": true
          }
        }
      },
      "performance": {
        // it is quite more readable with off, and we need to move data processing to backend anyway
        "noAccumulatingSpread": "off"
      },
      "recommended": true,
      "style": {
        // it makes a lot of merge conflicts
        "useImportType": "off"
      },
      "suspicious": {
        // e.g. immutablejs breaks this
        "noShadowRestrictedNames": "off"
      }
    }
  },
  "overrides": [
    {
      "includes": ["test/**", "**/*.spec.ts"],
      "linter": {
        "rules": {
          "style": {
            "noNonNullAssertion": "off"
          },
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      }
    }
  ],
  "vcs": {
    "clientKind": "git",
    "defaultBranch": "master",
    "enabled": false,
    "useIgnoreFile": true
  }
}
